@model IEnumerable<FreeLancingWebApp.Models.ViewModels.profileViewModels>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SelfDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Remotly)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Img)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Expertise)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SelfDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remotly)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Img)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Expertise)
                        </td>
                        <td>
                            <a asp-action="EditProfile" asp-controller="Jobs" asp-route-id="@item.Profileid">Edit</a> |
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
   
</div>



