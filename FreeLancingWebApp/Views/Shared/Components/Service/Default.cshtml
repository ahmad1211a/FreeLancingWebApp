@model List<Service> // Specify the model for this view

<!-- Loop through and display services -->
<link rel="stylesheet" type="text/css" href="~/css/style.css">

<div class="container">
    <div class="row g-4">
        @foreach (var service in Model)
        {
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                <a class="cat-item d-block bg-light text-center rounded p-3"
                asp-controller="Jobs"
                asp-action="IndexSelected"
                asp-route-serviceName="@service.Category">
                    <div class="rounded p-4">
                        <div class="icon mb-3">
                            <img class="img-fluid" style="width: 45px; height: 45px;" src="~/img/@service.ServiceImgUrl" alt="Icon">
                            
                        </div>
                        <h6>@service.Category</h6>
                        <span>@service.ServiceDesc</span>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
